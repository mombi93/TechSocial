<div class="container">
    <h1>Sign up</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-8 col-md-6">
            {{#if userCreated}}
            <h3>Thanks for signing up</h3>
            {{else}}
            <form method="post">
                <input type="hidden" name="action" value="signup">
                <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
                    <label>First Name</label>
                    <input type="text" name="firstname"  class="form-control" value="{{formData.firstname}}">
                </div>
                <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
                    <label>Last Name</label>
                    <input type="text" name="lastname"  class="form-control" value="{{formData.lastname}}">
                </div>
                <div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" value="{{formData.email}}">
                </div>
                <div class="form-group {{#if validationErrors.password}}has-error{{/if}}">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" value="{{formData.password}}">
                </div>
                <div class="form-group {{#if validationErrors.password}}has-error{{/if}}">
                    <label>Confirm Password</label>
                    <input type="password" name="confirm_password" class="form-control" value="{{formData.confirm_password}}">
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>
</div>
